＃包括< stdio.h中> 
＃包括< stdlib.h中> 

int  main（void）
{
	int a，b;
	printf（“請選擇性別並輸入年齡，（1）男生（2）女生”）;
	scanf（“％d％d ”，＆a，＆b）;
	if（a == 1）
	{
		如果（b  - 8 < 18）
			printf（“你不能結婚”）;
		否則 如果（b  - 8 > = 18）
			printf（“你可以結婚”）;
		其他
			printf（“輸入錯誤”）;
	}
	否則 如果（a == 2）
	{
		如果（b  - 8 < 16）
		printf（“你不能結婚”）;
		否則 如果（b  - 8 > = 16）
		printf（“你可以結婚”）;
		其他
		printf（“輸入錯誤”）;
	}
	其他
		printf（“輸入錯誤”）;

	系統（“暫停”）;
	返回 0 ;
}
